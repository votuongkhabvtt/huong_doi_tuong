    <script>
        // X·ª≠ l√Ω chuy·ªÉn tab
        const tabs = document.querySelectorAll('.tab');
        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                tabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                
                if (tab.dataset.tab === 'info') {
                    document.querySelector('.contact-form').style.display = 'none';
                    document.querySelector('.contact-info').style.display = 'flex';
                } else {
                    document.querySelector('.contact-form').style.display = 'block';
                    document.querySelector('.contact-info').style.display = 'flex';
                }
            });
        });
        
        // X·ª≠ l√Ω g·ª≠i form
        const contactForm = document.getElementById('contactForm');
        const successMessage = document.getElementById('successMessage');
        
        contactForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // L·∫•y d·ªØ li·ªáu t·ª´ form
            const fullname = document.getElementById('fullname').value;
            const phone = document.getElementById('phone').value;
            const email = document.getElementById('email').value;
            const message = document.getElementById('message').value;
            
            // T·∫°o n·ªôi dung email
            const emailBody = `H·ªç v√† t√™n: ${fullname}%0D%0A%0D%0A
                              ƒêi·ªán tho·∫°i: ${phone}%0D%0A%0D%0A
                              Email: ${email}%0D%0A%0D%0A
                              N·ªôi dung: ${message}`;
            
            // T·∫°o li√™n k·∫øt mailto ƒë·ªÉ g·ª≠i email
            const mailtoLink = `mailto:votuongkhabvtt@gmail.com?subject=Li√™n h·ªá t·ª´ ${fullname}&body=${emailBody}`;
            
            // M·ªü ·ª©ng d·ª•ng email m·∫∑c ƒë·ªãnh
            window.location.href = mailtoLink;
            
            // Hi·ªÉn th·ªã th√¥ng b√°o th√†nh c√¥ng
            contactForm.reset();
            contactForm.style.display = 'none';
            successMessage.style.display = 'block';
            
            // Reset form sau 5 gi√¢y
            setTimeout(() => {
                successMessage.style.display = 'none';
                contactForm.style.display = 'block';
            }, 5000);
        });
    </script>
