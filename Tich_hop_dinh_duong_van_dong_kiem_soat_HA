    <script>
        // Lớp UserProfile
        class UserProfile {
            constructor(name, age, gender, height, weight, occupation, activityLevel, physioFactor) {
                this.name = name;
                this.age = age;
                this.gender = gender;
                this.height = height;
                this.weight = weight;
                this.occupation = occupation;
                this.activityLevel = activityLevel;
                this.physioFactor = physioFactor;
                this.bmi = this.calculateBMI();
                this.bmr = this.calculateBMR();
            }
            
            calculateBMI() {
                return (this.weight / ((this.height / 100) ** 2)).toFixed(2);
            }
            
            calculateBMR() {
                if (this.gender === 'male') {
                    return 10 * this.weight + 6.25 * this.height - 5 * this.age + 5;
                } else {
                    return 10 * this.weight + 6.25 * this.height - 5 * this.age - 161;
                }
            }
        }
        
        // Lớp BloodPressureRecord
        class BloodPressureRecord {
            constructor(systolic, diastolic, heartRate) {
                this.systolic = systolic;
                this.diastolic = diastolic;
                this.heartRate = heartRate;
                this.category = this.classifyBloodPressure();
            }
            
            classifyBloodPressure() {
                if (this.systolic < 90 || this.diastolic < 60) {
                    return { text: "Huyết áp thấp", class: "bp-normal" };
                } else if (this.systolic < 120 && this.diastolic < 80) {
                    return { text: "Bình thường", class: "bp-normal" };
                } else if (this.systolic >= 120 && this.systolic < 130 && this.diastolic < 80) {
                    return { text: "Huyết áp cao tâm thu", class: "bp-elevated" };
                } else if ((this.systolic >= 130 && this.systolic < 140) || (this.diastolic >= 80 && this.diastolic < 90)) {
                    return { text: "Tăng huyết áp giai đoạn 1", class: "bp-hypertension" };
                } else if ((this.systolic >= 140 && this.systolic < 180) || (this.diastolic >= 90 && this.diastolic < 120)) {
                    return { text: "Tăng huyết áp giai đoạn 2", class: "bp-hypertension" };
                } else {
                    return { text: "Cơn tăng huyết áp", class: "bp-hypertension" };
                }
            }
        }
        
        // Lớp ExerciseSession
        class ExerciseSession {
            constructor(exerciseType, duration, frequency) {
                this.exerciseType = exerciseType;
                this.duration = duration;
                this.frequency = frequency;
                this.metValues = {
                    'walking_slow': 2.9,
                    'walking_fast': 4.3,
                    'jogging': 8.0,
                    'cycling': 7.0,
                    'swimming': 6.0
                };
                this.exerciseNames = {
                    'walking_slow': 'Đi bộ chậm (3.2 km/h)',
                    'walking_fast': 'Đi bộ nhanh (5.6 km/h)',
                    'jogging': 'Chạy bộ (8 km/h)',
                    'cycling': 'Đạp xe tại chỗ (trung bình)',
                    'swimming': 'Bơi lội (sải, nhẹ nhàng)'
                };
            }
            
            calculateCaloriesBurned(weight) {
                const met = this.metValues[this.exerciseType];
                const durationHours = this.duration / 60;
                return met * weight * durationHours;
            }
            
            getExerciseName() {
                return this.exerciseNames[this.exerciseType];
            }
        }
        
        // Lớp MealPlan
        class MealPlan {
            constructor(totalCalories) {
                this.totalCalories = totalCalories;
                this.proteinPercentage = 0.15;
                this.carbsPercentage = 0.55;
                this.fatPercentage = 0.30;
                this.calculateNutrients();
                this.generateSampleMeals();
            }
            
            calculateNutrients() {
                // Tính calories từ mỗi nhóm chất
                this.proteinCalories = this.totalCalories * this.proteinPercentage;
                this.carbsCalories = this.totalCalories * this.carbsPercentage;
                this.fatCalories = this.totalCalories * this.fatPercentage;
                
                // Chuyển đổi calories sang grams
                // 1g protein = 4 calories, 1g carb = 4 calories, 1g fat = 9 calories
                this.proteinGrams = this.proteinCalories / 4;
                this.carbsGrams = this.carbsCalories / 4;
                this.fatGrams = this.fatCalories / 9;
            }
            
            generateSampleMeals() {
                this.meals = [
                    {
                        name: "Bữa sáng",
                        items: [
                            { name: "Bánh mì", amount: "2 lát", calories: 160, protein: 6, carbs: 30, fat: 2 },
                            { name: "Trứng ốp la", amount: "2 quả", calories: 180, protein: 12, carbs: 1, fat: 14 },
                            { name: "Sữa tươi không đường", amount: "200ml", calories: 120, protein: 7, carbs: 12, fat: 4 }
                        ]
                    },
                    {
                        name: "Bữa trưa",
                        items: [
                            { name: "Cơm trắng", amount: "2 bát", calories: 260, protein: 5, carbs: 58, fat: 1 },
                            { name: "Thịt gà luộc", amount: "150g", calories: 240, protein: 30, carbs: 0, fat: 12 },
                            { name: "Rau muống luộc", amount: "200g", calories: 60, protein: 5, carbs: 8, fat: 1 },
                            { name: "Đu đủ chín", amount: "200g", calories: 80, protein: 1, carbs: 20, fat: 0 }
                        ]
                    },
                    {
                        name: "Bữa tối",
                        items: [
                            { name: "Cơm trắng", amount: "1.5 bát", calories: 195, protein: 4, carbs: 43, fat: 1 },
                            { name: "Cá hồi áp chảo", amount: "150g", calories: 280, protein: 25, carbs: 0, fat: 18 },
                            { name: "Salad rau củ", amount: "150g", calories: 50, protein: 2, carbs: 10, fat: 0 },
                            { name: "Dầu olive", amount: "10g", calories: 90, protein: 0, carbs: 0, fat: 10 }
                        ]
                    },
                    {
                        name: "Bữa phụ",
                        items: [
                            { name: "Chuối", amount: "1 quả", calories: 105, protein: 1, carbs: 27, fat: 0 },
                            { name: "Hạt hạnh nhân", amount: "30g", calories: 180, protein: 6, carbs: 6, fat: 16 }
                        ]
                    }
                ];
                
                // Tính tổng calories của thực đơn mẫu
                this.sampleTotalCalories = 0;
                this.meals.forEach(meal => {
                    meal.items.forEach(item => {
                        this.sampleTotalCalories += item.calories;
                    });
                });
                
                // Điều chỉnh tỷ lệ để khớp với tổng năng lượng cần
                const adjustmentFactor = this.totalCalories / this.sampleTotalCalories;
                this.meals.forEach(meal => {
                    meal.items.forEach(item => {
                        item.calories = Math.round(item.calories * adjustmentFactor);
                        item.protein = Math.round(item.protein * adjustmentFactor * 0.8); // Giảm protein một chút
                        item.carbs = Math.round(item.carbs * adjustmentFactor);
                        item.fat = Math.round(item.fat * adjustmentFactor * 1.2); // Tăng chất béo một chút
                    });
                });
            }
        }
        
        // Lớp HypertensionControlSystem
        class HypertensionControlSystem {
            constructor() {
                this.userProfile = null;
                this.bloodPressure = null;
                this.exerciseSession = null;
                this.mealPlan = null;
                this.activityFactors = {
                    'sedentary': { value: 1.2, name: 'Ít vận động' },
                    'light': { value: 1.375, name: 'Vận động nhẹ' },
                    'moderate': { value: 1.55, name: 'Vận động vừa phải' },
                    'high': { value: 1.725, name: 'Vận động nặng' },
                    'very_high': { value: 1.9, name: 'Vận động rất nặng' }
                };
                this.physioFactors = {
                    'normal': { value: 1.0, name: 'Bình thường' },
                    'pregnant': { value: 1.15, name: 'Mang thai' },
                    'breastfeeding': { value: 1.25, name: 'Cho con bú' },
                    'illness': { value: 1.2, name: 'Ốm bệnh/Nhiễm trùng' },
                    'post_surgery': { value: 1.25, name: 'Sau phẫu thuật/Chấn thương' },
                    'resting': { value: 0.95, name: 'Nghỉ ngơi (do bệnh)' }
                };
            }
            
            calculateTDEE() {
                const activityFactor = this.activityFactors[this.userProfile.activityLevel].value;
                const physioFactor = this.physioFactors[this.userProfile.physioFactor].value;
                return this.userProfile.bmr * activityFactor * physioFactor;
            }
            
            calculateTotalEnergyRequirement() {
                const tdee = this.calculateTDEE();
                const exerciseCaloriesPerDay = this.exerciseSession.calculateCaloriesBurned(this.userProfile.weight) * 
                                             this.exerciseSession.frequency / 7;
                return tdee + exerciseCaloriesPerDay;
            }
            
            getActivityFactorName() {
                return this.activityFactors[this.userProfile.activityLevel].name;
            }
            
            getPhysioFactorName() {
                return this.physioFactors[this.userProfile.physioFactor].name;
            }
        }
        
        // Khởi tạo hệ thống
        const system = new HypertensionControlSystem();
        
        // Xử lý sự kiện khi nhấn nút Tính Toán
        document.getElementById('calculateBtn').addEventListener('click', function() {
            // Lấy thông tin từ form
            const name = document.getElementById('patientName').value;
            const age = parseInt(document.getElementById('patientAge').value);
            const gender = document.getElementById('patientGender').value;
            const height = parseFloat(document.getElementById('patientHeight').value);
            const weight = parseFloat(document.getElementById('patientWeight').value);
            const occupation = document.getElementById('patientOccupation').value;
            const activityLevel = document.getElementById('activityLevel').value;
            const physioFactor = document.getElementById('physioFactor').value;
            
            const systolic = parseInt(document.getElementById('systolic').value);
            const diastolic = parseInt(document.getElementById('diastolic').value);
            const heartRate = parseInt(document.getElementById('heartRate').value);
            
            const exerciseType = document.getElementById('exerciseType').value;
            const exerciseDuration = parseFloat(document.getElementById('exerciseDuration').value);
            const exerciseFrequency = parseInt(document.getElementById('exerciseFrequency').value);
            
            // Kiểm tra dữ liệu đầu vào
            if (!name || !age || !height || !weight || !systolic || !diastolic || !heartRate || 
                !exerciseDuration || !exerciseFrequency) {
                alert('Vui lòng điền đầy đủ thông tin!');
                return;
            }
            
            // Tạo các đối tượng
            system.userProfile = new UserProfile(name, age, gender, height, weight, occupation, activityLevel, physioFactor);
            system.bloodPressure = new BloodPressureRecord(systolic, diastolic, heartRate);
            system.exerciseSession = new ExerciseSession(exerciseType, exerciseDuration, exerciseFrequency);
            
            // Tính toán kết quả
            const tdee = system.calculateTDEE();
            const totalEnergy = system.calculateTotalEnergyRequirement();
            const exerciseCaloriesPerSession = system.exerciseSession.calculateCaloriesBurned(weight);
            const exerciseCaloriesPerDay = exerciseCaloriesPerSession * exerciseFrequency / 7;
            
            // Tạo kế hoạch bữa ăn
            system.mealPlan = new MealPlan(totalEnergy);
            
            // Hiển thị kết quả
            displayResults(system, tdee, totalEnergy, exerciseCaloriesPerSession, exerciseCaloriesPerDay);
            
            // Vẽ biểu đồ
            drawCharts(system.mealPlan, tdee, exerciseCaloriesPerDay, totalEnergy);
            
            // Hiển thị phần kết quả
            document.getElementById('resultsSection').style.display = 'block';
        });
        
        // Xử lý sự kiện khi nhấn nút Làm Mới
        document.getElementById('resetBtn').addEventListener('click', function() {
            // Reset form
            document.querySelectorAll('input, select').forEach(element => {
                if (element.type !== 'button') {
                    element.value = '';
                }
            });
            
            // Ẩn kết quả
            document.getElementById('resultsSection').style.display = 'none';
        });
        
        // Hiển thị kết quả
        function displayResults(system, tdee, totalEnergy, exerciseCaloriesPerSession, exerciseCaloriesPerDay) {
            // Thông tin bệnh nhân
            document.getElementById('resultName').textContent = system.userProfile.name;
            document.getElementById('resultAge').textContent = system.userProfile.age + ' tuổi';
            document.getElementById('resultGender').textContent = system.userProfile.gender === 'male' ? 'Nam' : 'Nữ';
            document.getElementById('resultHeight').textContent = system.userProfile.height + ' cm';
            document.getElementById('resultWeight').textContent = system.userProfile.weight + ' kg';
            document.getElementById('resultBMI').textContent = system.userProfile.bmi;
            document.getElementById('resultOccupation').textContent = system.userProfile.occupation;
            
            // Chỉ số huyết áp
            document.getElementById('resultBP').textContent = `${system.bloodPressure.systolic}/${system.bloodPressure.diastolic} mmHg`;
            document.getElementById('resultBPCategory').textContent = system.bloodPressure.category.text;
            document.getElementById('resultHeartRate').textContent = system.bloodPressure.heartRate + ' bpm';
            
            // Tính toán năng lượng chi tiết
            document.getElementById('calcBMR').textContent = `BMR = 10 × ${system.userProfile.weight} + 6.25 × ${system.userProfile.height} - 5 × ${system.userProfile.age} ${system.userProfile.gender === 'male' ? '+ 5' : '- 161'} = ${system.userProfile.bmr.toFixed(1)} kcal`;
            document.getElementById('calcActivityFactor').textContent = `${system.getActivityFactorName()} = ${system.activityFactors[system.userProfile.activityLevel].value}`;
            document.getElementById('calcPhysioFactor').textContent = `${system.getPhysioFactorName()} = ${system.physioFactors[system.userProfile.physioFactor].value}`;
            document.getElementById('calcTDEE').textContent = `TDEE = ${system.userProfile.bmr.toFixed(1)} × ${system.activityFactors[system.userProfile.activityLevel].value} × ${system.physioFactors[system.userProfile.physioFactor].value} = ${tdee.toFixed(1)} kcal`;
            document.getElementById('calcExerciseCaloriesPerSession').textContent = `Calories = MET × weight × duration = ${system.exerciseSession.metValues[system.exerciseSession.exerciseType]} × ${system.userProfile.weight} × ${(system.exerciseSession.duration/60).toFixed(2)} = ${exerciseCaloriesPerSession.toFixed(1)} kcal`;
            document.getElementById('calcExerciseCaloriesPerDay').textContent = `${exerciseCaloriesPerSession.toFixed(1)} × ${system.exerciseSession.frequency} / 7 = ${exerciseCaloriesPerDay.toFixed(1)} kcal`;
            document.getElementById('calcTotalEnergy').textContent = `Tổng = ${tdee.toFixed(1)} + ${exerciseCaloriesPerDay.toFixed(1)} = ${totalEnergy.toFixed(1)} kcal`;
            
            // Kết quả tính toán
            document.getElementById('resultBMR').textContent = system.userProfile.bmr.toFixed(1) + ' kcal';
            document.getElementById('resultTDEE').textContent = tdee.toFixed(1) + ' kcal';
            document.getElementById('resultExerciseCalories').textContent = exerciseCaloriesPerDay.toFixed(1) + ' kcal';
            document.getElementById('resultTotalEnergy').textContent = totalEnergy.toFixed(1) + ' kcal';
            
            // Khẩu phần dinh dưỡng
            document.getElementById('proteinGrams').textContent = system.mealPlan.proteinGrams.toFixed(1) + ' g';
            document.getElementById('carbsGrams').textContent = system.mealPlan.carbsGrams.toFixed(1) + ' g';
            document.getElementById('fatGrams').textContent = system.mealPlan.fatGrams.toFixed(1) + ' g';
            
            // Hiển thị thực đơn mẫu
            const mealPlanDetails = document.getElementById('mealPlanDetails');
            mealPlanDetails.innerHTML = '';
            
            system.mealPlan.meals.forEach(meal => {
                const mealElement = document.createElement('div');
                mealElement.className = 'meal-item';
                
                let mealHTML = `<div><strong>${meal.name}</strong></div><div>`;
                let totalMealCalories = 0;
                
                meal.items.forEach(item => {
                    mealHTML += `<div>${item.name} (${item.amount}): ${item.calories} kcal</div>`;
                    totalMealCalories += item.calories;
                });
                
                mealHTML += `</div><div><strong>${totalMealCalories} kcal</strong></div>`;
                mealElement.innerHTML = mealHTML;
                mealPlanDetails.appendChild(mealElement);
            });
            
            // Kế hoạch tập luyện
            document.getElementById('resultExerciseType').textContent = system.exerciseSession.getExerciseName();
            document.getElementById('resultExerciseDuration').textContent = system.exerciseSession.duration + ' phút/buổi';
            document.getElementById('resultExerciseFrequency').textContent = system.exerciseSession.frequency + ' buổi/tuần';
            document.getElementById('resultExerciseCaloriesPerSession').textContent = exerciseCaloriesPerSession.toFixed(1) + ' kcal/buổi';
        }
        
        // Vẽ biểu đồ
        function drawCharts(mealPlan, tdee, exerciseCalories, totalEnergy) {
            const nutritionCtx = document.getElementById('nutritionChart').getContext('2d');
            const energyCtx = document.getElementById('energyChart').getContext('2d');
            
            // Biểu đồ phân bổ dinh dưỡng
            if (window.nutritionChart) {
                window.nutritionChart.destroy();
            }
            window.nutritionChart = new Chart(nutritionCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Chất đạm (15%)', 'Chất bột (55%)', 'Chất béo (30%)'],
                    datasets: [{
                        data: [15, 55, 30],
                        backgroundColor: ['#3498db', '#2ecc71', '#f39c12'],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        },
                        title: {
                            display: true,
                            text: 'Phân Bổ Dinh Dưỡng'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.raw || 0;
                                    let gramText = '';
                                    
                                    if (label.includes('đạm')) {
                                        gramText = ` (${mealPlan.proteinGrams.toFixed(1)}g)`;
                                    } else if (label.includes('bột')) {
                                        gramText = ` (${mealPlan.carbsGrams.toFixed(1)}g)`;
                                    } else if (label.includes('béo')) {
                                        gramText = ` (${mealPlan.fatGrams.toFixed(1)}g)`;
                                    }
                                    
                                    return `${label}: ${value}%${gramText}`;
                                }
                            }
                        }
                    }
                }
            });
            
            // Biểu đồ năng lượng
            if (window.energyChart) {
                window.energyChart.destroy();
            }
            window.energyChart = new Chart(energyCtx, {
                type: 'bar',
                data: {
                    labels: ['Nhu cầu cơ bản (TDEE)', 'Tập luyện', 'Tổng năng lượng cần'],
                    datasets: [{
                        label: 'Năng lượng (kcal)',
                        data: [tdee, exerciseCalories, totalEnergy],
                        backgroundColor: ['#2c7873', '#6fb98f', '#ff9a76'],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Năng lượng (kcal)'
                            }
                        }
                    },
                    plugins: {
                        title: {
                            display: true,
                            text: 'Phân Bổ Năng Lượng'
                        }
                    }
                }
            });
        }
    </script>
</body>
</html>
