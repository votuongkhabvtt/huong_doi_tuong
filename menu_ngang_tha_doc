    <script>
        // Thêm hiệu ứng cho menu khi cuộn trang
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.style.position = 'sticky';
                navbar.style.top = '0';
                navbar.style.width = '100%';
                navbar.style.zIndex = '1000';
                navbar.style.borderRadius = '0 0 15px 15px';
            } else {
                navbar.style.position = 'relative';
                navbar.style.borderRadius = '0';
            }
        });
        
        // Xử lý chọn các mục trong dropdown
        const dropdownItems = document.querySelectorAll('.dropdown-item a');
        
        // Lưu trữ thông tin đã chọn
        const selectedValues = {
            school: 'Chưa chọn',
            class: 'Chưa chọn',
            group: 'Chưa chọn',
            subject: 'Chưa chọn',
            teacher: 'Chưa chọn'
        };
        
        // Cập nhật hiển thị thông tin đã chọn
        function updateSelectedInfo() {
            document.getElementById('school-info').textContent = selectedValues.school;
            document.getElementById('class-info').textContent = selectedValues.class;
            document.getElementById('group-info').textContent = selectedValues.group;
            document.getElementById('subject-info').textContent = selectedValues.subject;
            document.getElementById('teacher-info').textContent = selectedValues.teacher;
        }
        
        // Thiết lập sự kiện click cho từng mục dropdown
        dropdownItems.forEach(item => {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Xác định loại menu
                const dropdown = this.closest('.dropdown');
                let type = '';
                
                if (dropdown.classList.contains('dropdown-school')) type = 'school';
                else if (dropdown.classList.contains('dropdown-class')) type = 'class';
                else if (dropdown.classList.contains('dropdown-group')) type = 'group';
                else if (dropdown.classList.contains('dropdown-subject')) type = 'subject';
                else if (dropdown.classList.contains('dropdown-teacher')) type = 'teacher';
                
                if (type) {
                    // Cập nhật giá trị đã chọn
                    selectedValues[type] = this.getAttribute('data-value');
                    
                    // Cập nhật menu chính
                    const parentNavItem = this.closest('.nav-item');
                    const mainLink = parentNavItem.querySelector('a');
                    const icon = mainLink.querySelector('i').outerHTML;
                    mainLink.innerHTML = icon + ' ' + selectedValues[type];
                    
                    // Cập nhật hiển thị thông tin
                    updateSelectedInfo();
                    
                    // Thêm hiệu ứng active
                    dropdownItems.forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Hiệu ứng thông báo
                    const infoItem = document.getElementById(`${type}-info`);
                    infoItem.parentElement.style.animation = 'pulse 0.5s';
                    setTimeout(() => {
                        infoItem.parentElement.style.animation = '';
                    }, 500);
                }
            });
        });
        
        // Sự kiện cho nút "Thay đổi"
        document.querySelectorAll('.change-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                const type = this.parentElement.querySelector('strong').textContent
                    .toLowerCase()
                    .replace('tên ', '')
                    .replace(' ', '');
                
                // Tìm menu tương ứng
                const navItems = document.querySelectorAll('.nav-item');
                navItems.forEach(item => {
                    const link = item.querySelector('a');
                    if (link.textContent.includes(type.charAt(0).toUpperCase() + type.slice(1))) {
                        item.querySelector('.dropdown').style.display = 'block';
                        setTimeout(() => {
                            item.querySelector('.dropdown').style.display = '';
                        }, 100);
                    }
                });
            });
        });
        
        // Thêm hiệu ứng pulse
        const style = document.createElement('style');
        style.innerHTML = `
            @keyframes pulse {
                0% { transform: scale(1); }
                50% { transform: scale(1.03); }
                100% { transform: scale(1); }
            }
        `;
        document.head.appendChild(style);
        
        // Khởi tạo hiển thị thông tin
        updateSelectedInfo();
    </script>
</body>
