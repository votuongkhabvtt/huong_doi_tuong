    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const menuItems = document.querySelectorAll('.menu-item-header');
            
            menuItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();
                    const parentItem = this.closest('.menu-item');
                    
                    // Nếu menu này đang mở thì đóng nó
                    if (parentItem.classList.contains('active')) {
                        parentItem.classList.remove('active');
                        parentItem.querySelector('.dropdown-content').style.maxHeight = null;
                    } else {
                        // Đóng tất cả các menu khác
                        document.querySelectorAll('.menu-item').forEach(otherItem => {
                            otherItem.classList.remove('active');
                            otherItem.querySelector('.dropdown-content').style.maxHeight = null;
                        });
                        
                        // Mở menu hiện tại
                        parentItem.classList.add('active');
                        const content = parentItem.querySelector('.dropdown-content');
                        content.style.maxHeight = content.scrollHeight + 'px';
                    }
                });
            });
            
            // Đóng menu khi click ra ngoài
            document.addEventListener('click', function(e) {
                if (!e.target.closest('.menu-item')) {
                    document.querySelectorAll('.menu-item').forEach(item => {
                        item.classList.remove('active');
                        item.querySelector('.dropdown-content').style.maxHeight = null;
                    });
                }
            });
            
            // Hiệu ứng cho các thẻ hướng dẫn
            const cards = document.querySelectorAll('.instruction-card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-10px)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
