            <div class="clinic-contact">Tel: 0913504755 | Web: votuongkha.net</div>
        </div>

        <!-- User Info -->
        <div class="user-info" id="user-info" style="display: none;">
            <div>Xin chào: <span class="user-name" id="display-name"></span></div>
