        ];
        
        let mistakeTypes = JSON.parse(localStorage.getItem('mistakeTypes')) || [
            { id: 1, name: "Th√°i ƒë·ªô kh√¥ng t·ªët v·ªõi b·ªánh nh√¢n", code: "Tƒê" },
            { id: 2, name: "G√¢y tai bi·∫øn cho b·ªánh nh√¢n", code: "TB" },
            { id: 3, name: "G√¢y th·∫•t tho√°t kinh t·∫ø cho ph√≤ng kh√°m", code: "KT" }
        ];
        
